{
  "name": "rolldown-plugin-dts",
  "type": "module",
  "version": "0.19.0",
  "packageManager": "pnpm@10.26.0",
  "description": "A Rolldown plugin to generate and bundle dts files.",
  "author": "Kevin Deng <sxzz@sxzz.moe>",
  "license": "MIT",
  "funding": "https://github.com/sponsors/sxzz",
  "homepage": "https://github.com/sxzz/rolldown-plugin-dts#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sxzz/rolldown-plugin-dts.git"
  },
  "bugs": {
    "url": "https://github.com/sxzz/rolldown-plugin-dts/issues"
  },
  "keywords": [
    "rolldown",
    "plugin",
    "dts",
    "typescript",
    "vue",
    "jsdoc"
  ],
  "exports": {
    ".": "./dist/index.mjs",
    "./filename": "./dist/filename.mjs",
    "./tsc": "./dist/tsc.mjs",
    "./tsc-context": "./dist/tsc-context.mjs",
    "./tsc-worker": "./dist/tsc-worker.mjs",
    "./package.json": "./package.json"
  },
  "main": "./dist/index.mjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=20.19.0"
  },
  "scripts": {
    "lint": "eslint --cache .",
    "lint:fix": "pnpm run lint --fix",
    "build": "tsdown",
    "dev": "tsdown --watch",
    "test": "vitest",
    "typecheck": "tsgo --noEmit",
    "format": "prettier --cache --write .",
    "release": "bumpp",
    "prepack": "pnpm run build"
  },
  "peerDependencies": {
    "@ts-macro/tsc": "^0.3.6",
    "@typescript/native-preview": ">=7.0.0-dev.20250601.1",
    "rolldown": "^1.0.0-beta.55",
    "typescript": "^5.0.0",
    "vue-tsc": "~3.1.0"
  },
  "peerDependenciesMeta": {
    "@ts-macro/tsc": {
      "optional": true
    },
    "@typescript/native-preview": {
      "optional": true
    },
    "typescript": {
      "optional": true
    },
    "vue-tsc": {
      "optional": true
    }
  },
  "dependencies": {
    "@babel/generator": "^7.28.5",
    "@babel/parser": "^7.28.5",
    "@babel/types": "^7.28.5",
    "ast-kit": "^2.2.0",
    "birpc": "^4.0.0",
    "dts-resolver": "^2.1.3",
    "get-tsconfig": "^4.13.0",
    "magic-string": "^0.30.21",
    "obug": "^2.1.1"
  },
  "devDependencies": {
    "@sxzz/eslint-config": "^7.4.3",
    "@sxzz/prettier-config": "^2.2.6",
    "@sxzz/test-utils": "^0.5.15",
    "@types/babel__generator": "^7.27.0",
    "@types/node": "^25.0.3",
    "@typescript/native-preview": "7.0.0-dev.20251217.1",
    "@volar/typescript": "^2.4.27",
    "@vue/language-core": "^3.1.8",
    "arktype": "^2.1.29",
    "bumpp": "^10.3.2",
    "diff": "^8.0.2",
    "eslint": "^9.39.2",
    "prettier": "^3.7.4",
    "rolldown": "^1.0.0-beta.55",
    "rolldown-plugin-require-cjs": "^0.3.3",
    "rollup-plugin-dts": "^6.3.0",
    "tinyglobby": "^0.2.15",
    "tsdown": "^0.18.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16",
    "vue": "^3.5.25",
    "vue-tsc": "^3.1.8"
  },
  "prettier": "@sxzz/prettier-config"
}
