{
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "baseUrl": ".",
    "outDir": "build/server",
    "rootDir": "src",
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "Bundler",
    "skipLibCheck": true,
    "isolatedDeclarations": false,
  },
  "include": ["src/server"],
  "references": [{ "path": "./tsconfig.shared.json" }]
}
