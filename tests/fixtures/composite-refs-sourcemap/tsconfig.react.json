{
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "baseUrl": ".",
    "outDir": "build/react",
    "rootDir": "src",
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "Bundler",
    "skipLibCheck": true,
    "isolatedDeclarations": false
  },
  "include": ["src/react"],
  "references": [
    {
      "path": "./tsconfig.shared.json"
    }
  ]
}
